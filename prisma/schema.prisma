// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String      @id 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  replies      Reply[]
  slackUser    SlackUser    @relation(fields: [slackUserId, slackTeamId], references: [slackUserId, slackTeamId])
  slackChannel SlackChannel @relation(fields: [slackTeamId, slackChannelId], references: [slackTeamId, slackChannelId])
  sortKey Int @unique @default(autoincrement())
  slackMessage   String
  slackMessageTs String
  slackChannelId String

  slackUserId String
  slackTeamId String

  @@unique([slackChannelId, slackMessageTs, slackTeamId])
}

model Reply {
  id        String      @id 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slackUser    SlackUser    @relation(fields: [slackUserId, slackTeamId], references: [slackUserId, slackTeamId])
  message      Message      @relation(fields: [messageId], references: [id])
  slackChannel SlackChannel @relation(fields: [slackTeamId, slackChannelId], references: [slackTeamId, slackChannelId])

  slackMessage String
  slackUserId  String

  slackMessageTs String
  slackChannelId String
  slackTeamId    String

  messageId String

  @@unique([slackChannelId, slackMessageTs, slackTeamId])
}

model SlackUser {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slackUserId   String
  slackTeamId   String
  slackRealName String
  Message       Message[]
  replies       Reply[]

  @@unique([slackUserId, slackTeamId])
}

model SlackChannel {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slackChannelName String
  message          Message[]
  replies          Reply[]

  slackTeamId    String
  slackChannelId String

  @@unique([slackTeamId, slackChannelId])
}
